package com.facol.projeto.utils;

import java.time.Instant;
import java.time.ZoneId;
import java.time.format.DateTimeFormatter;
import java.util.List;

import org.springframework.stereotype.Component;

import com.facol.projeto.model.Associado;
import com.facol.projeto.service.validacao.impl.CpfNãoUnicos;

@Component
public class Utils {

	public  String transformarData(Instant data) {
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm").withZone(ZoneId.systemDefault());
		return formatter.format(data);
	}
	public void cpfNaoUnicos(List<Associado> associados, String cpf) {
		for(Associado associado:associados) {
			if(associado.getCpf().equalsIgnoreCase(cpf)) {
				throw new CpfNãoUnicos();
			}
		}
	}
}
